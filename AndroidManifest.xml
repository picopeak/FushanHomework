<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fushan.homework"
    android:versionCode="4"
    android:versionName="4.5" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.fushan.homework.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:parentActivityName="com.fushan.homework.DisplayMessageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pig.DisplayMessageActivity" />
        </activity>
        <activity
            android:name="com.fushan.homework.DisplayMessageActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:parentActivityName="com.fushan.homework.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fushan.homework.AboutActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:parentActivityName="com.fushan.homework.AboutActivity">
        </activity>
        <activity
            android:name="com.fushan.homework.ScoreMark"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:parentActivityName="com.fushan.homework.ScoreMark">
        </activity>
        </application>

</manifest>
